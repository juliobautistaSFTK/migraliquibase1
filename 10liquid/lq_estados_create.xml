<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <!-- Cambio para crear una nueva tabla -->
    <changeSet id="create-table-estados2" author="usuario">
        <createTable tableName="estados2">
            <column name="id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="poblacion" type="INT">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <!-- Rollback para eliminar la tabla creada -->
        <rollback>
            <dropTable tableName="estados2"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
